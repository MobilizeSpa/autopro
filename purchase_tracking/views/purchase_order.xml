<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record id="views_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <!--<field name="tracking_sale_order_count" invisible="1"/>-->
                    <button name="send_message" string="Enviar Email a Cliente" type="object" attrs="{'invisible': [('state','not in',['purchase', 'done'])]}"/>                    
                </xpath>

                <field name="origin" position="after">
                    <field name="tracking_sale_order_ids" widget="many2many_tags"/>
                </field>

                <!--<field name="user_id" position="after">
                    <field name="purchase_tracking_factory"/>
                    <field name="purchase_tracking_carrier"/>
                </field>-->

                <xpath expr="//page[@name='products']//field[@name='taxes_id']" position="after">
                    <field name="purchase_tracking_factory" optional="show"/>
                    <field name="purchase_tracking_carrier" optional="show"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
