<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Email template -->
        <record id="email_template_tracking_purchase_order" model="mail.template">
            <field name="name">Tracking - Despacho de fábrica</field>
            <field name="email_from">${(object.create_uid.email and '%s &lt;%s&gt;' % (object.create_uid.name, object.create_uid.email) or '')|safe}</field>
            <field name="subject">${object.company_id.name} - Recepción (Ref ${object.tracking_sale_order_ids.name or 'n/a' })</field>
            <field name="partner_to">${object.tracking_sale_order_ids.partner_id.id}</field>
            <field name="model_id" ref="purchase_tracking.model_purchase_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<p>
Hola,
</p>

<p>
Tu pedido número ${object.tracking_sale_order_ids.name} ya fue despachado desde el fabricante a nuestra bodega internacional.
Te estaremos informando sobre su disponibilidad.
</p>

<p>
Saludos<br/>
Equipo AutoproStore
</p>
]]></field>
        </record>
    </data>
</odoo>